{% extends 'VkafOafBundle::layout.html.twig' %}

{% block title %}{{ 'vkaf_oaf.layout.resources'|trans }}{% endblock %}

{% block content%}
<div class="box box-primary">
  <div class="box-body no-padding">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>{{ 'vkaf_oaf.resource.field.id'|trans }}</th>
          <th>{{ 'vkaf_oaf.resource.field.owner'|trans }}</th>
          <th>{{ 'vkaf_oaf.resource.field.label'|trans }}</th>
          <th>{{ 'vkaf_oaf.resource.list.assignments'|trans }}</th>
          {% if is_granted('ROLE_OAF_RESOURCE_MANAGE') %}
          <th class="col-right">
            <a href="{{ path('oaf_resource_new') }}" data-title="{{ 'vkaf_oaf.resource.list.new'|trans }}" data-toggle="tooltip"><i class="fa fa-plus"></i></a>
          </th>
          {% endif %}
        </tr>
      </thead>
      <tbody>
        {% for row in resources %}
        <tr>
          <td>{{ row.resource.id }}</td>
          <td>{{ row.resource.owner.name }}</td>
          <td>{{ row.resource.label }}</td>
          <td>{% for assignment in row.assignments %}{% if not loop.first %}, {% endif %}<a href="{{ path('oaf_user_desk', {'user': assignment.user.id}) }}">{{ assignment.user.name }}</a>{% endfor %}</td>
          {% if is_granted('ROLE_OAF_RESOURCE_MANAGE') %}
          <td class="col-right">
            <a href="{{ path('oaf_resource_edit', {'resource': row.resource.id}) }}"><i class="fa fa-pencil"></i></a>
          </td>
          {% endif %}
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
