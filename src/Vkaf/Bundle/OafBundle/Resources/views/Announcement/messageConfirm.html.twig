{% extends 'VkafOafBundle::layout.html.twig' %}
{% form_theme form 'ZentriumCoreBundle::form.html.twig' %}

{% block title %}{{ 'vkaf_oaf.layout.messages'|trans }}{% endblock %}

{% block content %}
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">{{ 'vkaf_oaf.message.new.title'|trans }}</h3>
  </div>
  <div class="box-body">
    <dl>
      <dt>{{ 'vkaf_oaf.message.field.receivers'|trans }}</dt>
      <dd>{{ draft.receivers|formatList({'property': 'name'}) }}</dd>
      <dt>{{ 'vkaf_oaf.message.field.text'|trans }}</dt>
      <dd>{{ draft.text|nl2br }}</dd>
      <dt>{{ 'vkaf_oaf.message.cost'|trans }}</dt>
      <dd>{{ 'vkaf_oaf.message.cost_approximation'|trans({'%cost%': (cost * 100)|money}) }}</dd>
    </dl>
    {{ form(form) }}
  </div>
</div>
{% endblock %}
