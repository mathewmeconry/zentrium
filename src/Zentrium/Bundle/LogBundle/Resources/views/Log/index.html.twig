{% extends 'ZentriumLogBundle::layout.html.twig' %}
{% import "ZentriumLogBundle::utils.html.twig" as logUtils %}

{% set activeLabelNames = [] %}
{% for label in labels %}
  {% if label.id in activeLabels %}
    {% set activeLabelNames = activeLabelNames|merge(['«'~label.name~'»']) %}
  {% endif %}
{% endfor %}

{% block title %}{{ 'zentrium_log.layout.log'|trans }}{% endblock %}

{% block content %}
<div class="box box-primary">
  <div class="box-header">
    <h3 class="box-title">
      {{ ('zentrium_log.list.title.'~activeStatus|default('all'))|trans }}{% if activeLabels|length %} {{ 'zentrium_log.list.with_labels'|transchoice(activeLabels|length, {'%labels%': activeLabelNames|formatList}) }}{% endif %}
    </h3>
    <div class="box-tools">
      <div class="btn-group">
        <button type="button" class="btn btn-box-tool" data-toggle="dropdown" data-title="{{ 'zentrium_log.list.filter'|trans }}"><i class="fa fa-filter"></i></button>
        <ul class="dropdown-menu">
          <li><a href="{{ path('logs') }}">{{ 'zentrium_log.list.filter_reset'|trans }}</a></li>
          <li role="separator" class="divider"></li>
          {% for status in statuses %}
          <li class="{% if activeStatus == status %}active{% endif %}">
            <a href="{{ path('logs', {'status': (status != activeStatus ? status : '')}) }}">{{ logUtils.statusIcon(status) }} {{ ('zentrium_log.status.'~status)|trans }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% if is_granted('ROLE_LOG_WRITE') %}
      <a href="{{ path('log_new') }}" title="{{ 'zentrium_log.menu.new'|trans }}" class="btn btn-box-tool"><i class="fa fa-plus"></i></a>
      {% endif %}
    </div>
  </div>
  <div class="box-body no-padding">
    {% if logs|length %}
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th class="col-status"></th>
            <th>{{ 'zentrium_log.log.field.labels'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.reported'|trans }}/{{ 'zentrium_log.log.field.deadline'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.source'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.title'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.location'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.details'|trans }}</th>
            <th>{{ 'zentrium_log.log.field.resolution'|trans }}</th>
            <th class="col-tools"></th>
        </thead>
        <tbody>
          {% for log in logs %}
          <tr>
            <td class="col-status" title="{{ ('zentrium_log.status.'~log.status)|trans }}">{{ logUtils.statusIcon(log.status) }}</td>
            <td>{% for label in log.labels %}<span class="label" style="background-color: {{ label.color }}">{{ label.name }}</span>&#x20;{% endfor %}</td>
            <td>
              {% if log.deadline %}
                <span class="{% if log.deadline < now and log.status == 'open' %}text-danger{% endif %}" title="{{ log.deadline|ago }}">{{ 'zentrium_log.list.deadline'|trans({'%date%': log.deadline|localizedDate('datetime_medium')}) }}</span>
              {% else %}
                <span title="{{ log.reported|default(log.created)|localizedDate('datetime_medium') }}">{{ log.reported|default(log.created)|ago }}</span>
              {% endif %}
            </td>
            <td>{{ log.source }}</td>
            <td><a href="{{ path('log_view', {'log': log.id}) }}">{{ log.title }}</a></td>
            <td>{{ log.location }}</td>
            <td>{{ log.details|truncate(50) }}</td>
            <td>{{ log.resolution|truncate(50) }}</td>
            <td>{% if commentCounts[log.id]|default %}<span class="label label-default pull-right">{{ commentCounts[log.id] }} <i class="fa fa-comment"></i></span>{% endif %}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p class="empty">{{ 'zentrium_log.list.empty'|trans }}</p>
    {% endif %}
  </div>
</div>
{% endblock %}
