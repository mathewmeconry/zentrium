{% extends 'ZentriumCoreBundle::layout.html.twig' %}

{% block title %}{{ 'zentrium.user.list.title'|trans }}{% endblock %}

{% block content %}
<div class="box">
  <div class="box-body no-padding">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>{{ 'zentrium.user.field.name'|trans }}</th>
          <th>{{ 'zentrium.user.field.firstname'|trans }}</th>
          <th>{{ 'zentrium.user.field.username'|trans }}</th>
          <th>{{ 'zentrium.user.field.email'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
        <tr>
          <td>{{ user.id }}</td>
          <td>{{ user.name }}</td>
          <td>{{ user.firstname }}</td>
          <td>{{ user.username }}</td>
          <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
