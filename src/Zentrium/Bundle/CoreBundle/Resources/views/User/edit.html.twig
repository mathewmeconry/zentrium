{% extends 'ZentriumCoreBundle::layout.html.twig' %}
{% form_theme form 'ZentriumCoreBundle::form.html.twig' %}

{% block title_full %}{{ user.name }} - {{ 'zentrium.user.list.title'|trans }}{% endblock %}
{% block title %}{{ user.name }}{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">{{ 'zentrium.user.edit.title'|trans }}</h3>
        </div>
        <div class="box-body">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript">
        document.getElementById('user_labels').onclick = function () {
            window.open("{{ path('user_labels', {'user': user.id}) }}");
        }
    </script>
{% endblock %}