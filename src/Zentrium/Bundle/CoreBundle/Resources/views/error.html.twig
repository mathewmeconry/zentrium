{% extends 'ZentriumCoreBundle::layout.html.twig' %}

{% set color = (status_code == 404 ? 'yellow' : 'red') %}

{% set titleKey = 'zentrium.error.'~status_code~'.title' %}
{% if titleKey|trans != titleKey %}
{% set title = titleKey|trans %}
{% set text = ('zentrium.error.'~status_code~'.text')|trans %}
{% else %}
{% set title = 'zentrium.error.500.title'|trans %}
{% set text = 'zentrium.error.500.text'|trans %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block body_class %}hold-transition error-page{% endblock %}

{% block body %}
<div class="error-box">
  <h2 class="headline text-{{ color }}">{{ status_code }}</h2>
  <div class="error-content">
    <h3><i class="fa fa-warning text-{{ color }}"></i> {{ title }}</h3>
    <p>{{ text }}</p>
  </div>
</div>
{% endblock %}
