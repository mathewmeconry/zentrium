{% extends 'ZentriumCoreBundle::layoutViewer.html.twig' %}

{% block title %}{{ 'zentrium.viewer.user_profile.title'|trans }}{% endblock %}

{% block content %}
<div class="box box-primary">
  <div class="box-body">
    <dl>
      <dt>{{ 'zentrium.user.field.last_name'|trans }}</dt>
      <dd>{{ user.lastName }}</dd>
      <dt>{{ 'zentrium.user.field.first_name'|trans }}</dt>
      <dd>{{ user.firstName }}</dd>
      {% if user.birthday %}
      <dt>{{ 'zentrium.user.field.birthday'|trans }}</dt>
      <dd>{{ user.birthday|date('d.m.Y') }}</dd>
      {% endif %}
      {% if user.title %}
      <dt>{{ 'zentrium.user.field.title'|trans }}</dt>
      <dd>{{ user.title }}</dd>
      {% endif %}
      <dt>{{ 'zentrium.user.field.email'|trans }}</dt>
      <dd>{{ user.email }}</dd>
      <dt>{{ 'zentrium.user.field.mobile_phone'|trans }}</dt>
      <dd>{% if user.mobilePhone %}{{ user.mobilePhone|phoneNumber }}{% else %}-{% endif %}</dd>
    </dl>
  </div>
</div>
{% endblock %}
