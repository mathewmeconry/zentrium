{% extends 'ZentriumCoreBundle::layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block body_class %}hold-transition login-page{% endblock %}

{% block body %}
<div class="login-box">
  <div class="login-logo">
    <a href="{{ path('home') }}">Zentrium</a>
  </div>
  <div class="login-box-body">
    {% if error %}
      <p class="login-box-msg">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      <div class="form-group has-feedback">
        <input type="text" name="_username" class="form-control" placeholder="{{ 'zentrium.security.username'|trans }}" autofocus>
        <span class="fa fa-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" name="_password" class="form-control" placeholder="{{ 'zentrium.security.password'|trans }}">
        <span class="fa fa-key form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8"></div>
        <div class="col-xs-4">
          <input type="submit" name="_submit" value="{{ 'zentrium.security.login'|trans }}" class="btn btn-primary btn-block btn-flat" />
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
